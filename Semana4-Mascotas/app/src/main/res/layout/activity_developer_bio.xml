<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeveloperBioActivity">

    <include
        android:id="@id/actionbar" layout="@layout/actionbar">
    </include>

    <TextView
        android:id="@+id/tvDevName"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:text="@string/developer_name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/textSize_title"
        android:textStyle="bold" />

    <Button
        android:id="@+id/linkedin_login_btn"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorWhite"
        android:drawableStart="@drawable/linkedin_icon"
        android:drawableLeft="@drawable/linkedin_icon"
        android:layout_below="@id/tvDevName"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="LinkedIn"
        android:textAllCaps="false"
        android:textColor="@android:color/widget_edittext_dark"
        android:onClick="openLinkedIn"/>

    <Button
        android:id="@+id/github_login_btn"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:layout_below="@id/linkedin_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        android:drawableStart="@drawable/github_icon"
        android:drawableLeft="@drawable/github_icon"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="Github"
        android:textAllCaps="false"
        android:textColor="@android:color/widget_edittext_dark"
        android:onClick="openGithub"/>

</RelativeLayout>
